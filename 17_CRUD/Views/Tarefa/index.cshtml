@model List<Tarefa>
<h1>Lista de tarefa</h1>
<table class="table">
    <thead>
        <tr>
            <th>Trefa</th>
            <th>Concluida</th>
            <th>Acões</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td> @tarefa.Descricao </td>
                <td> @(tarefa.Concluida == true ? "Sim" : "Não") </td>
               <td>
                <a asp-action="Editar" asp-route-id="@tarefa.Id" class="btn btn-info">Editar</a>
                <a asp-action="Deletar" asp-route-id="@tarefa.Id" class="btn btn-info">Deletar</a>
            
               </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Adicionar" class="btn btn-info">Adicionar Nova Tarefa </a>